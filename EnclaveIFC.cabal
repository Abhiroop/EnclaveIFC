  ghc-options: -Wall -Wcompat -Widentities -Wincomplete-record-updates -Wincomplete-uni-patterns -Wmissing-export-lists -Wmissing-home-modules -Wpartial-fields -Wredundant-constraints -threaded -rtsopts -with-rtsopts=-N
  build-depends:
      EnclaveIFC
    , base >=4.7 && <5
    , binary
    , bytestring
    , network-simple
    , transformers
  if (flag(enclave))
    cpp-options: -DENCLAVE
  else
    cpp-options: -DUMMY
  if (flag(testing))
    ghc-options: -w
    cpp-options: -DTESTING
  default-language: Haskell2010

executable EnclaveIFC-exe
  import: exe
  main-is: Main.hs
  other-modules:
      Lattice
      Program
      Sec
      SecIO
      Paths_EnclaveIFC
  hs-source-dirs:
      app

executable SecureCounter-exe
  import: exe
  hs-source-dirs: examples/SecureCounter
  main-is: SecureCounter.hs
  ghc-options: -main-is SecureCounter

executable EnclaveLeak-exe
  import: exe
  hs-source-dirs: examples/EnclaveLeak
  main-is: EnclaveLeak.hs
  ghc-options: -main-is EnclaveLeak

